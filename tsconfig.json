{
  "compilerOptions": {
    "target": "ES2019",
    "strict": false,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "cjs",
    "module": "commonjs",
  },
  "include": [ "src/**/*.ts"]
}
